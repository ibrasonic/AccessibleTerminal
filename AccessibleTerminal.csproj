<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <AssemblyName>AccessibleTerminal</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>AccessibleTerminal Team</Authors>
    <Company>AccessibleTerminal</Company>
    <Product>Accessible Terminal for Windows</Product>
    <Description>A professional, accessible command-line interface with screen reader support and Unix command compatibility</Description>
    <Copyright>Copyright Â© 2025</Copyright>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishReadyToRun>true</PublishReadyToRun>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Management.Automation" Version="7.4.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="bin\unix\**\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
